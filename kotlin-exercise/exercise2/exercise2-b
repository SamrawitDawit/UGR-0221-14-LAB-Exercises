
import java.util.Scanner

fun main() {
    val scanner = Scanner(System.`in`)

    print("Enter the number of hours worked: ")
    val hoursWorked = scanner.nextDouble()

    print("Enter the hourly rate: ")
    val hourlyRate = scanner.nextDouble()

    fun calculateSalary(hoursWorked: Double, hourlyRate: Double): Double {
        val regularHours = if (hoursWorked > 40) 40 else hoursWorked
        val overtimeHours = if (hoursWorked > 40) hoursWorked - 40 else 0.0
        val regularPay = regularHours * hourlyRate
        val overtimePay = overtimeHours * hourlyRate * 1.5
        return regularPay + overtimePay
    }

    val totalSalary = calculateSalary(hoursWorked, hourlyRate)
    println("The total salary for $hoursWorked hours at $$hourlyRate per hour is $$totalSalary.")
}
